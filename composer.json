{
  "require": {
    "php": ">=7.4.0 <8.4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "lumen-api/app/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.12",
    "phpmd/phpmd": "^2.15",
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpro/grumphp": "^2.12"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer dump-autoload",
      "vendor/bin/grumphp git:init"
    ],
    "post-update-cmd": [
      "@composer dump-autoload",
      "vendor/bin/grumphp git:init"
    ]
  }
}
  
